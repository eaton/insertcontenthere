---
layout: layouts/base.njk
---
<h2>Episode {{episode}}: {{ title }}</h2>
<p class="description">{{ description | safe }}</p>

<audio controls preload="none">
  <source src="{{ storage }}/{{ filename }}" type="{{ filemime }}" />
  Your browser does not support the audio element.
</audio>

{% if links or guests %}
<section id="episodemeta">
{% if guests %}
<dl>
  <dt>Host:</dt>
  <dd><a href="https://twitter.com/{{ metadata.twitter }}">{{ metadata.author }}</a>
  <dt>Guest{{ 's' if guests | length > 1 }}:</dt>
  {% for guest in guests %}
  <dd>
  {%- if guest.twitter %}<a href="https://twitter.com/{{ guest.twitter }}">{{ guest.name }}</a>
  {%- elseif guest.home %}<a href="{{ guest.home }}">{{ guest.name }}</a>
  {%- else %}{{ guest.name }}
  {%- endif -%}
  {% if guest.title %}, {{ guest.title }}{% endif %}{% if guest.company %}, {{ guest.company }}{% endif %}
  </dd>
  {%- endfor %}
</dl>
{% endif %}

{% if links %}
<dl>
  <dt>Mentioned in this episode:</dt>
  {%- for link in links %}
  <dd><a href="{{ link.title }}">{{ link.title }}</a></dd>{% endfor %}
</dl>
{% endif %}
</section>
{% endif %}

<section id="transcript">
{% if transcript == "true"%}
{{ layoutContent | safe }}
{% elseif transcript == "partial"%}
<p class="disclaimer">This episode's transcript is in progress; the partial transcript below has been auto-generated by <a href="https://otter.ai">Otter.ai</a>.</p>
{{ layoutContent | safe }}
{% else %}
<p class="disclaimer">This episode's transcript is in progress, and will be posted shortly.</p>
{% endif %}
</section>
