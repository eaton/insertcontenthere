---
layout: layouts/base.njk
---
<h2>{{ title }}</h2>

<div class = "player-container">
  <audio class="player" disableContextMenu data-plyr-config='{ "title": "{{ title }}"}'>
    <source src="{{ storage }}/{{ filename }}" type="{{ filemime }}" />
  </audio>
</div>

{% if layoutContent %}
{{ layoutContent | safe }}
{% endif %}